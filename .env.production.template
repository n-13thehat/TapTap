# TapTap Matrix ZION - Production Environment Template
# Copy this file to .env.production and fill in your production values
# NEVER commit the actual .env.production file to git

# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration (ROTATE THESE CREDENTIALS)
DATABASE_URL="postgresql://NEW_USERNAME:NEW_PASSWORD@your-production-db:5432/taptap_production"
DIRECT_URL="postgresql://NEW_USERNAME:NEW_PASSWORD@your-production-db:5432/taptap_production?sslmode=require"

# Supabase Configuration (GENERATE NEW KEYS, leave blank if not using Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://your-new-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-new-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-new-service-role-key"

# NextAuth Configuration (GENERATE NEW SECRET)
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="your-new-32-character-minimum-secret-here"

# External API Keys (GENERATE NEW KEYS)
OPENAI_API_KEY="your-new-openai-api-key"
YOUTUBE_API_KEY="your-new-youtube-api-key"
DEEZER_APP_ID="your-deezer-app-id"
DEEZER_APP_SECRET="your-deezer-app-secret"
DEEZER_REDIRECT_URI="https://your-production-domain.com/api/deezer/callback"
DEEZER_MARKET_DISABLED=false

# Application Configuration
TREASURE_KEY="your-new-treasure-key"
TREASURY_PRIVATE_KEY="your-new-treasury-private-key"
TAPTAP_ADMIN_EMAIL="admin@your-domain.com"
TAPTAP_APP_PASSWORD="your-new-secure-app-password"
NEXT_PUBLIC_ADMIN_PASSCODE="your-new-admin-passcode"

# Security
CSRF_SECRET="your-new-csrf-secret-minimum-32-characters"
ENCRYPTION_KEY="your-new-encryption-key-minimum-32-characters"

# Feature Flags
BETA_MODE=false
BETA_ACCESS_CODE="your-production-beta-code"

# Monitoring & Analytics (Optional)
SENTRY_DSN="https://your-sentry-dsn"
SENTRY_RELEASE="your-release-version"
SENTRY_ENV=production

# Performance & Caching (Optional)
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Solana Configuration (Optional)
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_PRIVATE_KEY="your-solana-private-key"

# Logging
LOG_LEVEL=error

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# Performance
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30000
