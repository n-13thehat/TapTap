{
  "appId": "com.taptap.matrix",
  "productName": "TapTap Matrix",
  "copyright": "Copyright Â© 2025 TapTap",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*.cjs",
    "electron/**/*.js",
    ".next/**/*",
    "public/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": ".next/standalone",
      "to": "app-server",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/branding/tap-logo.png",
    "publisherName": "TapTap",
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/branding/tap-logo.png",
    "category": "public.app-category.music"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/branding/tap-logo.png",
    "category": "Audio"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "TapTap Matrix"
  },
  "dmg": {
    "title": "TapTap Matrix",
    "icon": "public/branding/tap-logo.png"
  },
  "publish": null
}
